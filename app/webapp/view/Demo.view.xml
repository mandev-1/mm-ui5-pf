<mvc:View
	controllerName="com.mmd.controller.Demo"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:layout="sap.ui.layout"
	height="100%">
	<Page title="Demo" showNavButton="false">
		<content>
			<ScrollContainer horizontal="false" vertical="true" height="100%">
				<l:VerticalLayout class="sapUiContentPadding" width="100%">
					<l:content>
						<Title 
							text="Demo"
							level="H1" 
							class="sapUiSmallMarginBottom" />
						<Text 
							text="Demo content and examples."
							class="sapUiMediumMarginBottom" />
						<!-- Demo content will go here -->
					</l:content>
				</l:VerticalLayout>
			</ScrollContainer>
		</content>
		<footer class="customFooter">
			<OverflowToolbar class="customFooterToolbar">
				<layout:VerticalLayout width="95%">
					<layout:Grid defaultSpan="L6 M6 S10" hSpacing="2" width="100%">
						<layout:content>
							<VBox>
								<layoutData>
									<layout:GridData span="L3 M1 S12" />
								</layoutData>
								<ToolbarSpacer />
							</VBox>
							<VBox>
								<layoutData>
									<layout:GridData span="L6 M6 S12" />
								</layoutData>
								<TextArea
									class="noticeMe"
									growing="true"
									id="queryTextArea"
									liveChange=".onQueryTextAreaLiveChange"
									placeholder="Enter your query here please"
									rows="3"
									width="100%" />
							</VBox>
							<VBox>
								<layoutData>
									<layout:GridData span="L3 M5 S12" />
								</layoutData>
								<ToolbarSpacer />
								<FlexBox alignItems="Start" direction="Column">
									<Button
										ariaHasPopup="Dialog"
										icon="sap-icon://action-settings"
										press=".onOpenPopoverQuerySettings"
										text="Open Settings" />
									<!-- Long text for Tablet/Desktop -->
									<Button
									class="sapUiVisibleOnlyOnDesktop"
									icon="ai"
									press=".onGenerateQuery"
									text="ASK AI TO GENERATE SELECT ... QUERY ✨"
									type="Ghost" />

									<!-- Short text for Phone -->
									<Button
									class="sapUiVisibleOnlyOnTablet"
									icon="ai"
									press=".onGenerateQuery"
									text="GO ✨"
									type="Ghost" />
								</FlexBox>
							</VBox>
						</layout:content>
					</layout:Grid>
				</layout:VerticalLayout>
			</OverflowToolbar>
		</footer>
	</Page>




</mvc:View>

