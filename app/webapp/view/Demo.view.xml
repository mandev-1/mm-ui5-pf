<mvc:View
	controllerName="com.mmd.controller.Demo"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:layout="sap.ui.layout"
	xmlns:core="sap.ui.core"
	xmlns:f="sap.f"
	height="100%">
	<Page title="AI Chat Demo" showNavButton="false" class="chatPage">
		<content>
			<ScrollContainer 
				id="chatScrollContainer"
				horizontal="false" 
				vertical="true" 
				height="100%"
				class="chatContainer">
				<List 
					id="chatMessageList"
					class="chatMessageList"
					showSeparators="None"
					mode="None">
					<items>
						<!-- Messages will be added dynamically -->
					</items>
				</List>
				<!-- Typing indicator -->
				<HBox 
					id="typingIndicator"
					class="typingIndicator chatMessageContent chatMessageAI"
					visible="false">
					<Avatar 
						initials="AI"
						displaySize="S"
						displayShape="Circle"
						backgroundColor="Accent6"
						class="chatAvatar" />
					<VBox class="chatMessageBubble typingBubble">
						<HBox class="typingDots">
							<core:HTML content="&lt;span class='dot'&gt;&lt;/span&gt;" />
							<core:HTML content="&lt;span class='dot'&gt;&lt;/span&gt;" />
							<core:HTML content="&lt;span class='dot'&gt;&lt;/span&gt;" />
						</HBox>
					</VBox>
				</HBox>
			</ScrollContainer>
		</content>
		<footer class="customFooter">
            <OverflowToolbar class="customFooterToolbar">
				<layout:VerticalLayout width="100%" class="footerContentLayout">
					<!-- Desktop/Tablet Layout -->
					<layout:Grid defaultSpan="L12 M12 S12" hSpacing="1" vSpacing="1" width="100%" class="sapUiHideOnPhone footerGrid">
                        <layout:content>
							<VBox class="footerTextAreaContainer">
                                <layoutData>
									<layout:GridData span="L8 M8 S12" />
                                </layoutData>
                                <Input
									class="noticeMe desktopTextArea chatInput"
                                    id="queryTextArea"
                                    liveChange=".onQueryTextAreaLiveChange"
                                    placeholder="Type your message..."
                                    submit=".onGenerateQuery"
                                    width="100%" />
                            </VBox>
							<VBox class="footerButtonContainer">
                                <layoutData>
									<layout:GridData span="L4 M4 S12" />
                                </layoutData>
								<FlexBox alignItems="Center" justifyContent="End" class="footerButtonFlex">
                                    <Button
										class="aiChatButton"
										icon="sap-icon://paper-plane"
                                    press=".onGenerateQuery"
										type="Emphasized"
										tooltip="Send message" />
                                </FlexBox>
                            </VBox>
                        </layout:content>
                    </layout:Grid>
					<!-- Phone Layout -->
					<layout:VerticalLayout class="sapUiVisibleOnlyOnPhone phoneFooterLayout">
						<layout:content>
							<Input
								class="noticeMe phoneTextArea chatInput"
								id="queryTextAreaPhone"
								liveChange=".onQueryTextAreaLiveChange"
								placeholder="Type your message..."
								submit=".onGenerateQuery"
								width="100%" />
							<Button
								class="aiChatButton phoneAiButton"
								icon="sap-icon://paper-plane"
								press=".onGenerateQuery"
								type="Emphasized"
								tooltip="Send message"
								width="100%" />
						</layout:content>
					</layout:VerticalLayout>
                </layout:VerticalLayout>
            </OverflowToolbar>
        </footer>
	</Page>




</mvc:View>

