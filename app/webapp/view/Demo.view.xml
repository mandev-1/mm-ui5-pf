<mvc:View
	controllerName="com.mmd.controller.Demo"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:layout="sap.ui.layout"
	height="100%">
	<Page title="Demo" showNavButton="false">
		<content>
			<ScrollContainer horizontal="false" vertical="true" height="100%">
				<l:VerticalLayout class="sapUiContentPadding" width="100%">
					<l:content>
						<Title 
							text="Demo"
							level="H1" 
							class="sapUiSmallMarginBottom" />
						<Text 
							text="Demo content and examples."
							class="sapUiMediumMarginBottom" />
						<!-- Demo content will go here -->
					</l:content>
				</l:VerticalLayout>
			</ScrollContainer>
		</content>
		<footer class="customFooter">
			<OverflowToolbar class="customFooterToolbar">
				<layout:VerticalLayout width="100%" class="footerContentLayout">
					<!-- Desktop/Tablet Layout -->
					<layout:Grid defaultSpan="L12 M12 S12" hSpacing="1" vSpacing="1" width="100%" class="sapUiHideOnPhone footerGrid">
						<layout:content>
							<VBox class="footerTextAreaContainer">
								<layoutData>
									<layout:GridData span="L8 M8 S12" />
								</layoutData>
								<TextArea
									class="noticeMe desktopTextArea"
									growing="true"
									id="queryTextArea"
									liveChange=".onQueryTextAreaLiveChange"
									placeholder="Enter your query here please"
									rows="3"
									width="100%" />
							</VBox>
							<VBox class="footerButtonContainer">
								<layoutData>
									<layout:GridData span="L4 M4 S12" />
								</layoutData>
								<FlexBox alignItems="Center" justifyContent="End" class="footerButtonFlex">
									<Button
										class="aiChatButton"
										icon="sap-icon://chat"
										press=".onGenerateQuery"
										text="Chat with my AI ✨"
										type="Emphasized" />
								</FlexBox>
							</VBox>
						</layout:content>
					</layout:Grid>
					<!-- Phone Layout -->
					<layout:VerticalLayout class="sapUiVisibleOnlyOnPhone phoneFooterLayout">
						<layout:content>
							<TextArea
								class="noticeMe phoneTextArea"
								growing="true"
								id="queryTextAreaPhone"
								liveChange=".onQueryTextAreaLiveChange"
								placeholder="Enter your query here please"
								rows="2"
								width="100%" />
							<Button
								class="aiChatButton phoneAiButton"
								icon="sap-icon://chat"
								press=".onGenerateQuery"
								text="Chat with my AI ✨"
								type="Emphasized"
								width="100%" />
						</layout:content>
					</layout:VerticalLayout>
				</layout:VerticalLayout>
			</OverflowToolbar>
		</footer>
	</Page>




</mvc:View>

