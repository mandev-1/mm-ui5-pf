			<l:content>
				<!-- Main Heading -->
				<l:VerticalLayout class="sapUiLargeMarginTop sapUiLargeMarginBegin homeContentWidth">
					<l:content>
					
					<HBox>
					<VBox>
						<core:HTML 
							content="&lt;h1 class=&quot;homeHeading sparkleText&quot; id=&quot;sparkleHeading&quot;&gt;&lt;span class=&quot;headingText&quot;&gt;I &lt;span class=&quot;builtWord&quot;&gt;built&lt;span class=&quot;underline&quot;&gt;&lt;/span&gt;&lt;/span&gt; this portfolio with UI5 and CAP because why not&lt;/span&gt;&lt;/h1&gt;" />
						
						<!-- Description Text -->
						<Text 
							text="I'm the Man. I'm a young professional studying at 42, focusing on building modern applications that leverage SAP Business Technology Platform."
							class="sapUiMediumMarginTop homeDescription" />
					</VBox>
					<VBox>
						<core:HTML 
							content="&lt;div class=&quot;profilePictureContainer&quot;&gt;&lt;img id=&quot;profilePictureImg&quot; alt=&quot;Profile Picture&quot; class=&quot;profilePicture&quot; /&gt;&lt;/div&gt;" />
					</VBox>
					</HBox>
					
					
						<!-- Who am I Section -->
						<Panel 
							width="94%"
							headerText="Who am I"
							class="sapUiMediumMarginTop sapUiContentPadding"
							expandable="true"
							expanded="true">
							<content>
								<l:VerticalLayout class="sapUiSmallMargin">
									<l:content>
										<Text 
											text="I'm currently studying at 42, where I'm developing my skills in software engineering and system design. As a young professional, I'm passionate about building modern applications that leverage SAP Business Technology Platform (BTP) to create scalable, cloud-native solutions." 
											class="sapUiSmallMarginBottom" />
										<Text 
											text="My focus areas include:" 
											class="sapUiSmallMarginTop" />
										<List class="sapUiSmallMarginTop">
											<StandardListItem title="SAP Cloud Application Programming (CAP)" />
											<StandardListItem title="SAP UI5 and Fiori development" />
											<StandardListItem title="Business Technology Platform integration" />
											<StandardListItem title="Cloud-native architecture and deployment" />
										</List>
										<Link 
											text="View my GitHub â†’"
											href="https://github.com/mandev-1"
											target="_blank"
											class="sapUiSmallMarginTop" />
									</l:content>
								</l:VerticalLayout>
							</content>
						</Panel>
					</l:content>
				</l:VerticalLayout>
				
				<!-- Spacer to push buttons to bottom -->
				<l:VerticalLayout class="">
					<l:content>
						<core:HTML 
							content="&lt;div style=&quot;flex: 1; min-height: 100px;&quot;&gt;&lt;/div&gt;" />
					</l:content>
				</l:VerticalLayout>
				
				<!-- Action Buttons -->
				<l:HorizontalLayout class="sapUiLargeMarginBottom sapUiLargeMarginBegin homeContentWidth">
					<l:content>
						<Button 
							text="View projects"
							type="Emphasized"
							press="onViewProjects"
							class="homeProjectButton" />
						<Link 
							text="Connect professionally"
							press="onConnectProfessionally"
							class="sapUiMediumMarginBegin homeConnectLink" />
					</l:content>
				</l:HorizontalLayout>

				<!-- Slide Tiles -->
				<f:GridContainer id="topTilesGrid" class="sapUiLargeMarginBottom sapUiLargeMarginBegin homeContentWidth">
					<SlideTile>
						<layoutData>
							<f:GridContainerItemLayoutData columns="4" rows="2" />
						</layoutData>
						<GenericTile
							backgroundImage="test-resources/sap/m/demokit/sample/SlideTile/images/NewsImage2.png"
							frameType="TwoByOne"
							press="goToABAPDevelopment">
							<TileContent footer="December 20, 2025">
								<NewsContent
									contentText="Get ready for SAP's ABAP certification exam with me"
									subheader="Today, SAP News" />
							</TileContent>
						</GenericTile>
						<GenericTile
