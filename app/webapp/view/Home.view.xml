<mvc:View
	controllerName="com.mmd.controller.Home"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
	height="100%"
	class="homeView">
	<l:HorizontalLayout class="homeContainer" width="100%" height="100%">
		<!-- Left Content Area (2/3 width) -->
		<l:VerticalLayout class="homeLeftContent sapUiNoContentPadding" width="66.67%">
			<l:content>
					<!-- Toggle Switch -->
					<l:HorizontalLayout class="sapUiMediumMarginTop sapUiMediumMarginBegin" width="100%">
						<l:content>
							<Switch 
								state="{= ${language>/mode} === 'human'}"
								customTextOn="Corporate"
								customTextOff="Real"
								change="onLanguageToggle" />
						</l:content>
					</l:HorizontalLayout>
					
					<!-- Main Heading -->
					<l:VerticalLayout class="sapUiLargeMarginTop sapUiLargeMarginBegin" width="90%">
						<l:content>
							<core:HTML 
								content="&lt;h1 class=&quot;homeHeading&quot;&gt;I design digital products that &lt;em&gt;make a difference&lt;/em&gt;&lt;/h1&gt;" />
							
							<!-- Description Text -->
							<Text 
								text="I create innovative, user focused experiences that scale. Now shaping journeys for 40M+ users at Affirm."
								class="sapUiMediumMarginTop homeDescription" />
						</l:content>
					</l:VerticalLayout>
					
					<!-- Spacer to push buttons to bottom -->
					<l:VerticalLayout class="sapUiNoContentPadding" width="100%">
						<l:content>
							<core:HTML 
								content="&lt;div style=&quot;flex: 1; min-height: 200px;&quot;&gt;&lt;/div&gt;" />
						</l:content>
					</l:VerticalLayout>
					
					<!-- Action Buttons -->
					<l:HorizontalLayout class="sapUiLargeMarginBottom sapUiLargeMarginBegin" width="90%">
						<l:content>
							<Button 
								text="View projects"
								type="Emphasized"
								press="onViewProjects"
								class="homeProjectButton" />
							<Link 
								text="Connect professionally"
								press="onConnectProfessionally"
								class="sapUiMediumMarginBegin homeConnectLink" />
						</l:content>
					</l:HorizontalLayout>
				</l:content>
			</l:content>
		</l:VerticalLayout>
		
		<!-- Right Image Area (1/3 width) -->
		<l:VerticalLayout class="homeRightContent sapUiNoContentPadding" width="33.33%">
			<l:content>
				<core:HTML 
					content="&lt;div class=&quot;homeImageContainer&quot;&gt;&lt;div class=&quot;homeAbstractImage&quot;&gt;&lt;/div&gt;&lt;/div&gt;" />
			</l:content>
		</l:VerticalLayout>
	</l:HorizontalLayout>
</mvc:View>
