<mvc:View
	controllerName="com.mmd.controller.Home"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
	height="100%"
	class="homeView">
	<l:HorizontalLayout class="homeContainer">
		<!-- Left Content Area (2/3 width) -->
		<l:VerticalLayout class="homeLeftContent sapUiNoContentPadding">
			<l:content>
					<!-- Toggle Switch -->
					<l:HorizontalLayout class="sapUiMediumMarginTop sapUiMediumMarginBegin">
						<l:content>
							<Switch 
								state="{= ${language>/mode} === 'human'}"
								customTextOn="Corporate"
								customTextOff="Real"
								change="onLanguageToggle" />
						</l:content>
					</l:HorizontalLayout>
					
					<!-- Main Heading -->
					<l:VerticalLayout class="sapUiLargeMarginTop sapUiLargeMarginBegin homeContentWidth">
						<l:content>
							<core:HTML 
								content="&lt;h1 class=&quot;homeHeading&quot;&gt;I design digital products that &lt;em&gt;make a difference&lt;/em&gt;&lt;/h1&gt;" />
							
							<!-- Description Text -->
							<Text 
								text="I'm a young professional studying at 42, focusing on building modern applications that leverage SAP Business Technology Platform."
								class="sapUiMediumMarginTop homeDescription" />
							
							<!-- Who am I Section -->
							<Panel 
								headerText="Who am I"
								class="sapUiMediumMarginTop whoAmIPanel"
								expandable="true"
								expanded="true">
								<content>
									<l:VerticalLayout class="sapUiSmallMargin">
										<l:content>
											<Text 
												text="I'm currently studying at 42, where I'm developing my skills in software engineering and system design. As a young professional, I'm passionate about building modern applications that leverage SAP Business Technology Platform (BTP) to create scalable, cloud-native solutions." 
												class="sapUiSmallMarginBottom" />
											<Text 
												text="My focus areas include:" 
												class="sapUiSmallMarginTop" />
											<List class="sapUiSmallMarginTop">
												<StandardListItem title="SAP Cloud Application Programming (CAP)" />
												<StandardListItem title="SAP UI5 and Fiori development" />
												<StandardListItem title="Business Technology Platform integration" />
												<StandardListItem title="Cloud-native architecture and deployment" />
											</List>
											<Link 
												text="View my GitHub â†’"
												href="https://github.com/mandev-1"
												target="_blank"
												class="sapUiSmallMarginTop" />
										</l:content>
									</l:VerticalLayout>
								</content>
							</Panel>
						</l:content>
					</l:VerticalLayout>
					
					<!-- Spacer to push buttons to bottom -->
					<l:VerticalLayout class="sapUiNoContentPadding">
						<l:content>
							<core:HTML 
								content="&lt;div style=&quot;flex: 1; min-height: 100px;&quot;&gt;&lt;/div&gt;" />
						</l:content>
					</l:VerticalLayout>
					
					<!-- Action Buttons -->
					<l:HorizontalLayout class="sapUiLargeMarginBottom sapUiLargeMarginBegin homeContentWidth">
						<l:content>
							<Button 
								text="View projects"
								type="Emphasized"
								press="onViewProjects"
								class="homeProjectButton" />
							<Link 
								text="Connect professionally"
								press="onConnectProfessionally"
								class="sapUiMediumMarginBegin homeConnectLink" />
						</l:content>
					</l:HorizontalLayout>
			</l:content>
		</l:VerticalLayout>
		
		<!-- Right Image Area (1/3 width) -->
		<l:VerticalLayout class="homeRightContent sapUiNoContentPadding">
			<l:content>
				<core:HTML 
					content="&lt;div class=&quot;homeImageContainer&quot;&gt;&lt;div class=&quot;homeAbstractImage&quot;&gt;&lt;/div&gt;&lt;/div&gt;" />
			</l:content>
		</l:VerticalLayout>
	</l:HorizontalLayout>
</mvc:View>
