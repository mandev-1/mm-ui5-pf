<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<List>
		<items>
			<!-- Dark Mode Toggle -->
			<StandardListItem
				id="darkModeListItem"
				icon="{= ${language>/darkMode} ? 'sap-icon://light-mode' : 'sap-icon://dark-mode'}"
				title="{= ${language>/darkMode} ? 'Switch to Light Mode' : 'Switch to Dark Mode'}"
				type="Active"
				press=".onDarkModePress" />
			
			<!-- Language Mode Toggle -->
			<StandardListItem
				id="languageModeListItem"
				icon="{= ${language>/mode} === 'work' ? 'sap-icon://palette' : 'sap-icon://business-objects-experience'}"
				title="{= ${language>/mode} === 'work' ? 'Switch to Fun Mode (weekend)' : 'Switch to Work Mode'}"
				type="Active"
				press=".onLanguageModePress" />
		</items>
	</List>
</core:FragmentDefinition>
