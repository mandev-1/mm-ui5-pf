<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<List>
		<items>
			<!-- Dark Mode Toggle -->
			<StandardListItem
				id="darkModeListItem"
				icon="{= ${language>/darkMode} ? 'sap-icon://light-mode' : 'sap-icon://dark-mode'}"
				title="{= ${language>/darkMode} ? 'Switch to Light Mode' : 'Switch to Dark Mode'}"
				type="Active"
				press=".onDarkModePress" />
			
			<!-- Language Mode Toggle -->
			<StandardListItem
				id="languageModeListItem"
				icon="{= ${language>/mode} === 'corporate' ? 'sap-icon://weekend' : ${language>/mode} === 'weekend' ? 'sap-icon://business-objects-experience' : 'sap-icon://employee'}"
				title="{= ${language>/mode} === 'corporate' ? 'Switch to Weekend Mode' : ${language>/mode} === 'weekend' ? 'Switch to Corporate Mode' : 'Switch to Corporate Mode'}"
				type="Active"
				press=".onLanguageModePress" />
		</items>
	</List>
</core:FragmentDefinition>
