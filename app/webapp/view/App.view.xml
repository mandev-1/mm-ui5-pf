<mvc:View
	controllerName="com.mmd.controller.App"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:core="sap.ui.core"
	xmlns:form="sap.ui.layout.form"
	xmlns:tnt="sap.tnt"
	height="100%"
  width="100%"
	id="AppView">
	<tnt:ToolPage id="toolPage">
		<tnt:header>
			<f:ShellBar
				title="MMD"
				secondTitle="Application"
				showMenuButton="true"
				homeIcon="https://www.sap.com/dam/application/shared/logos/sap-logo-svg.svg.adapt.svg/1493030643828.svg"
				showCopilot="true"
				showNotifications="true"
				menuButtonPressed="onMenuButtonPress"
				homeIconPressed="onHomeIconPress"
				class="shellBarWithCopilot">
				<f:menu>
					<Menu>
						<MenuItem text="About" icon="sap-icon://information" press="onAboutPress" />
					</Menu>
				</f:menu>
				<f:profile>
					<Avatar
						id="profileAvatar"
						src="sap-icon://employee"
						displaySize="S"
						displayShape="Circle"
						press="onProfilePress" />
				</f:profile>
				<f:searchManager>
					<f:SearchManager/>
				</f:searchManager>
			</f:ShellBar>
		</tnt:header>
		<tnt:sideContent>
			<core:Fragment
				fragmentName="com.mmd.view.fragments.SideNavigation"
				type="XML" />
		</tnt:sideContent>
		<tnt:mainContents>
			<NavContainer id="pageContainer" initialPage="home">
				<pages>
					<mvc:XMLView viewName="com.mmd.view.Home" id="home" />
					<mvc:XMLView viewName="com.mmd.view.Demo" id="demo" />
					<mvc:XMLView viewName="com.mmd.view.BTPApps" id="btp-apps" />
					<mvc:XMLView viewName="com.mmd.view.LLMsRAG" id="llms-rag" />
					<mvc:XMLView viewName="com.mmd.view.DataAnalytics" id="data-analytics" />
					<mvc:XMLView viewName="com.mmd.view.LowLevel" id="low-level" />
					<mvc:XMLView viewName="com.mmd.view.Networking" id="networking" />
					<mvc:XMLView viewName="com.mmd.view.DevOps" id="devops" />
					<mvc:XMLView viewName="com.mmd.view.CloudNative" id="cloud-native" />
					<mvc:XMLView viewName="com.mmd.view.LLMOps" id="llmops" />
					<mvc:XMLView viewName="com.mmd.view.Studying42" id="42-prague" />
					<mvc:XMLView viewName="com.mmd.view.ABAPDevelopment" id="abap-development" />
					<mvc:XMLView viewName="com.mmd.view.FIORIApp" id="42-fiori-app" />
					<mvc:XMLView viewName="com.mmd.view.CAPBackend" id="cap-backend-certification" />
				</pages>
			</NavContainer>
		</tnt:mainContents>
	</tnt:ToolPage>
</mvc:View>

